<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	style="@style/ListItemContainer"
>
	<TextView
		android:text="Blog title and author"
		android:id="@+id/blog_post_item_details"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@style/ListItemHeadingSmall"
	/>

	<TextView
		android:text="Title" 
		android:id="@+id/blog_post_item_title"
		android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:paddingTop="4dp"
		android:gravity="center_vertical|left|top"
		android:ellipsize="end"
		style="@style/ListItemLabel"
	/>

	<TextView
		android:text="Date"
		android:id="@+id/blog_post_item_date"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@style/ListItemDetailText"
	/>
</LinearLayout>
