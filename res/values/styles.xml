<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="ListItemContainer">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">7dp</item>
		<item name="android:paddingBottom">7dp</item>
	</style>
	<style name="ListItemHeading">
		<item name="android:textSize">22sp</item>
		<item name="android:typeface">serif</item>
		<item name="android:textColor">@color/red</item>
	</style>
	<style name="ListItemLabel">
		<item name="android:textSize">14sp</item>
		<item name="android:typeface">serif</item>
		<item name="android:textColor">@color/read</item>
	</style>
	<style name="ListItemDetailText">
		<item name="android:textSize">12sp</item>
	</style>
	<style name="InfoBarDate">
		<item name="android:gravity">right</item>
		<item name="android:layout_height">22sp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@color/orange</item>
	</style>
	<style name="InfoBarCategory">
		<item name="android:layout_height">22sp</item>
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@color/orange</item>
	</style>
	<style name="InfoLabel">
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textColor">@color/read</item>
	</style>
	<style name="StandardHeading">
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:typeface">serif</item>
		<item name="android:textColor">@color/read</item>
	</style>
	<style name="StandardText">
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textColor">@color/grey_darker</item>
	</style>
</resources>